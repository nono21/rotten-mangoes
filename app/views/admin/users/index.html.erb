<h1>Admin User Management</h1>
<%= paginate @users %>
  <div class="media">
    <div class="media-body">
      <table class="table table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><button type="button" class="btn btn-primary"><%= link_to "Edit", edit_admin_user_path(user) %></td>
              <td></button><button type="button" class="btn btn-danger"><%= link_to "Delete", admin_user_path(user), data: {:confirm => "You sure?"}, method: :delete %></button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <button type="button" class="btn btn-primary"><%= link_to "Add new user", new_admin_user_path %></button>
    </div>
  </div>
